    <% layout('layouts/boilerplate') %>
    <div class="d-flex justify-content-center mt-3 border border-primary">
        <form action="/monopoly/<%=p%>" method="post">
            <h2 class="d-flex justify-content-center"><%= currentBlock.object.title %></h2>
            <div>
                Here will be image of <%= currentBlock.object.title %>
            </div>
            <div>
                Price: <%= currentBlock.object.price %>
            </div>
            <section>
                <div class="mt-3">
                    Do you want to buy <%= currentBlock.object.title %>? 
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary" name="buy" value="on">Buy</button>
                    <button class="btn btn-primary" name="pass" value="on">Pass</button>
                </div>
            </section>
        </form>
    </div>